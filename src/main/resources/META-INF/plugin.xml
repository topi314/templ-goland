<idea-plugin>
    <id>com.github.topi314.templ-goland</id>
    <name>Templ-Goland</name>
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <platform.lsp.serverSupportProvider implementation="com.github.topi314.templgoland.TemplLspServerSupportProvider"/>
        <fileType extensions="templ" name="templ" implementationClass="com.github.topi314.templgoland.TemplFileType" language="templ"/>
    </extensions>
</idea-plugin>